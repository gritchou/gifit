{
    "manifest_version": 2,
    "name": "Gif It",
    "version": "0.0.1",
    "description": "Display gif in popup",
    "homepage_url": "https://github.com/gritchou/giphit",
    "icons": {
        "128": "icons/owl.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "contextMenus",
        "storage"
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_icon": "icons/owl.png",
        "default_title": "owl",
        "default_popup": "pop/pop.html"
    }


}
